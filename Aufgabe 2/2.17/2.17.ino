void ensureTime() {
  // Zeitzone für Deutschland (CET/CEST)
  configTzTime("CET-1CEST,M3.5.0,M10.5.0/3", "pool.ntp.org", "time.nist.gov");
  time_t now = 0;
  int tries = 0;
  while ((now = time(nullptr)) < 1700000000 && tries++ < 30) { // ~2023-11-14
    delay(500);
  }
}

void setup() {
  Serial.begin(115200);
  WiFi.begin(WIFI_SSID, WIFI_PASS);
  while (WiFi.status() != WL_CONNECTED) { delay(300); Serial.print("."); }
  Serial.println("\nWiFi ok");

  ensureTime();                  // ← wichtig für TLS
  net.setCACert(root_ca);        // ← CA setzen (Hostname muss passen)
  // net.setInsecure();          // nur zum Debuggen – nicht im Produktivbetrieb!

  mqtt.setServer(MQTT_HOST, MQTT_PORT);
  // optional: mqtt.setCallback(callback);

  // verbinden
  while (!mqtt.connected()) {
    Serial.println("MQTT connecting …");
    if (mqtt.connect(CLIENT_ID, MQTT_USER, MQTT_PASS)) {
      Serial.println("MQTT connected");
    } else {
      Serial.printf("MQTT failed, rc=%d\n", mqtt.state());
      delay(2000);
    }
  }

  mqtt.publish("test/topic", "hello from esp32");
  mqtt.subscribe("test/topic");
}

void loop() {
  if (!mqtt.connected()) {
    // Reconnect-Logik (kurz gehalten)
    mqtt.connect(CLIENT_ID, MQTT_USER, MQTT_PASS);
  }
  mqtt.loop();
}
